    "type": "yii2-extension",
    "keywords": [
        "yii2",
        "stripe",
        "billing"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Igor Chepurnoi",
            "email": "chepurnoi.igor@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.2",
        "yiisoft/yii2": "~2.0.14",
        "yii2mod/yii2-behaviors": "*",
        "stripe/stripe-php": "~4.0",
        "nesbot/carbon": "~1.0",
        "dompdf/dompdf": "^0.8.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "~2.0",
        "phpunit/phpunit": "~7.0"
        
